{
  "name": "use-stay-awake",
  "version": "1.0.0",
  "description": "React hook that will help the device stay awake while actively using your website or app.",
  "license": "MIT",
  "author": "roldanjr",
  "repository": "roldanjr/use-stay-awake",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "source": "src/index.ts",
  "scripts": {
    "clean": "rimraf dist/",
    "prepare": "yarn build:lib",
    "start:lib": "rollup -c -w",
    "prebuild:lib": "yarn clean",
    "build:lib": "rollup -c",
    "start:demo": "npm run start --prefix=demo",
    "predeploy:demo": "npm run build --prefix=demo",
    "deploy:demo": "gh-pages -d demo/build",
    "postinstall": "yarn format && cd demo && yarn install",
    "develop": "run-p start:lib start:demo",
    "format": "prettier --write \"**/*.{js,jsx,json,md}\"",
    "test": "jest"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  },
  "peerDependencies": {
    "react": "^16.13.1"
  },
  "devDependencies": {
    "@rollup/plugin-url": "^5.0.1",
    "@testing-library/jest-dom": "^5.11.2",
    "@testing-library/react-hooks": "^3.4.1",
    "@types/jest": "^26.0.8",
    "@types/node": "^14.0.27",
    "@types/react": "^16.9.44",
    "@types/react-dom": "^16.9.8",
    "gh-pages": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "^3.4.1",
    "react-test-renderer": "^16.13.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.23.0",
    "rollup-plugin-typescript2": "^0.27.1",
    "ts-jest": "^26.1.4",
    "typescript": "^3.9.7"
  },
  "engines": {
    "node": ">=10"
  },
  "files": [
    "dist"
  ]
}
